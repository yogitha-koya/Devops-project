pipeline {
    agent any

    environment {
        VENV_DIR = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/yogitha-koya/Devops-project.git', branch: 'main'
            }
        }

        stage('Set Up Virtualenv') {
            steps {
                sh '''
                    python3 -m venv ${VENV_DIR}
                    bash -c "source ${VENV_DIR}/bin/activate && pip3 install --upgrade pip"
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    bash -c "source ${VENV_DIR}/bin/activate && pip3 install -r requirements.txt"
                '''
            }
        }

        stage('Run App') {
            steps {
                sh '''
                    bash -c "source ${VENV_DIR}/bin/activate && python3 app.py"
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    bash -c "source ${VENV_DIR}/bin/activate && pytest tests/"
                '''
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
        always {
            echo 'üßπ Cleaning up...'
            sh "rm -rf ${VENV_DIR}"
        }
    }
}
